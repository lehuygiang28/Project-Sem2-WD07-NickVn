    @{
        string currentActionName = Convert.ToString(((Microsoft.AspNetCore.Mvc.Controllers.ControllerActionDescriptor)ViewContext.ActionDescriptor).ActionName);
        string[] navbarName = {"Index", "User", "Product", "Category", "Categories", "Order"};
        if (currentActionName == navbarName[4])
        {
            currentActionName = navbarName[3];
        }
        string js2ActionNavBar = "";
        for(int i = 0; i < navbarName.Length; i++)
        {
            if(currentActionName.Contains(navbarName[i]) || currentActionName.StartsWith(navbarName[i])
            || currentActionName.EndsWith(navbarName[i]))
            {
                js2ActionNavBar = @"<script>var a = document.getElementById('";
                js2ActionNavBar += navbarName[i];
                js2ActionNavBar += @"'); a.classList.add('active')</script>";
                break;
            }
        }
        @Html.Raw(js2ActionNavBar);
    }

