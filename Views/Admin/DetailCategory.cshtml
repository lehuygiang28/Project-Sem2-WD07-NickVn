@{
    ViewData["Title"] = "Category Detail";

    var cateById = ViewBag.cateById;
    Category cate = (Category)cateById;

}
<div class="container-fluid pt-4 px-4">

    <div class="row g-4">


        <div class="col-sm-12 col-xl-4">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">#@cate.CategoryId - @cate.Name</h6>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Id</dt>
                    <dd class="col-sm-8">@cate.CategoryId</dd>

                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@cate.Name</dd>

                    <dt class="col-sm-4">Title</dt>
                    <dd class="col-sm-8">@cate.Title</dd>

                    <dt class="col-sm-4">Action</dt>
                    <dd class="col-sm-8">@cate.Action</dd>

                    <dt class="col-sm-4">Img Sale Off</dt>
                    <dd class="col-sm-8">@cate.ImgSaleOff</dd>

                    <dt class="col-sm-4">Img Scr</dt>
                    <dd class="col-sm-8">@cate.ImgSrc</dd>

                    <dt class="col-sm-4">Total</dt>
                    <dd class="col-sm-8">@cate.Total</dd>

                    <dt class="col-sm-4">Note</dt>
                    <dd class="col-sm-8">@cate.Note</dd>

                    <div class="d-flex justify-content-center">

                        @Html.ActionLink("Edit", "EditCategory", new { id = cate.CategoryId }, new {@class =
                        "btn btn-outline-light m-2"})

                        <!-- Button trigger modal -->
                        <a type="button" class="btn btn-outline-danger m-2" data-bs-toggle="modal"
                            data-bs-target="#DeleteCategoryPopup">
                            Delete
                        </a>
                        <!-- Modal -->
                        <div class="modal fade" id="DeleteCategoryPopup" tabindex="-1"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-secondary" id="exampleModalLabel">Confirmation to
                                            delete?</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to delete this Category?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-danger">@Html.ActionLink("Confirm Delete",
                                            "DeleteCategory", new { id = cate.CategoryId }, new { @class =
                                            "text-white"})</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal End -->

                    </div>
                </dl>
            </div>
        </div>

